apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name }}
spec:
  selector:
    matchLabels:
      app: {{ name }}
  template:
    metadata:
      labels:
        app: {{ name }}
    spec:
      containers:
      - image: {{ image }}
        name: {{ name }}
        resources:
          requests:
            cpu: 0.5
            memory: 1Gi
        args:
        - "--default-authentication-plugin=mysql_native_password"
        env:
        - name: MYSQL_ROOT_PASSWORD
          value: {{ password }}
        - name: MYSQL_DATABASE
          value: {{ database }}
        ports:
        - containerPort: 3306
          name: mysql
        volumeMounts:
        - name: {{ name }}-pv
          mountPath: /var/lib/mysql
        # readinessProbe:
        #   exec:
        #     command: ["mysql", "-p$MYSQL_ROOT_PASSWORD", '-e"SELECT 1"']
        # livenessProbe:
        #   exec:
        #     command: ["mysqladmin", "-p$MYSQL_ROOT_PASSWORD", "ping"]
      volumes:
      - name: {{ name }}-pv
        persistentVolumeClaim:
          claimName: {{ name }}-pvc