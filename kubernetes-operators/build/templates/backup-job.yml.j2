apiVersion: batch/v1
kind: Job
metadata:
  name: backup-{{ name }}-job
  labels:
    usage: backup-{{ name }}-job
spec:
  template:
    metadata:
      name: backup-{{ name }}-job
    spec:
      restartPolicy: OnFailure
      containers:
      - name: backup-{{ name }}
        image: {{ image }}
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "mysqldump -u root -h {{ name }}-svc -p{{ password }} {{ database }} > /backup/{{ name }}-dump.sql"
        volumeMounts:
        - name: backup-{{ name }}-pv
          mountPath: /backup
      volumes:
      - name: backup-{{ name }}-pv
        persistentVolumeClaim:
          claimName: backup-{{ name }}-pvc