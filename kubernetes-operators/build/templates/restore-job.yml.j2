apiVersion: batch/v1
kind: Job
metadata:
  name: restore-{{ name }}-job
spec:
  template:
    metadata:
      name: restore-{{ name }}-job
    spec:
      restartPolicy: OnFailure
      containers:
      - name: restore-{{ name }}
        image: {{ image }}
        imagePullPolicy: IfNotPresent
        env:
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              name: {{ name }}
              key: root-password
        command:
        - /bin/sh
        - -c
        - "mysql -u root -h {{ name }}-svc -p$MYSQL_ROOT_PASSWORD {{ database }} < /backup/{{ name }}-dump.sql"
        volumeMounts:
        - name: backup-{{ name }}-pv
          mountPath: /backup
      volumes:
      - name: backup-{{ name }}-pv
        persistentVolumeClaim:
          claimName: backup-{{ name }}-pvc