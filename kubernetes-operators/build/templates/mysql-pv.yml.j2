apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ name }}-pv
  labels:
    pv-usage: {{ name }}
  
spec:
  finalizers: null
  storageClassName: standard
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /data/{{ name }}-pv/